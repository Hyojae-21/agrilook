<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="startup.sh" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
      <rules>
        <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^startup.sh\/debug[\/]?" />
        </rule>
        
        <!-- Next.js static files -->
        <rule name="StaticContent">
          <action type="Rewrite" url="public{REQUEST_URI}"/>
        </rule>
        
        <!-- Next.js _next static files -->
        <rule name="NextStaticFiles">
          <match url="^_next/(.*)" />
          <action type="Rewrite" url="_next/{R:1}" />
        </rule>
        
        <!-- Next.js API routes -->
        <rule name="NextApiRoutes">
          <match url="^api/(.*)" />
          <action type="Rewrite" url="startup.sh/api/{R:1}" />
        </rule>
        
        <!-- Next.js dynamic content -->
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True"/>
          </conditions>
          <action type="Rewrite" url="startup.sh"/>
        </rule>
      </rules>
    </rewrite>
    <security>
      <requestFiltering>
        <hiddenSegments>
          <remove segment="bin"/>
        </hiddenSegments>
      </requestFiltering>
    </security>
    <httpErrors existingResponse="PassThrough" />
  </system.webServer>
  <appSettings>
    <add key="NODE_ENV" value="production" />
    <add key="PORT" value="8080" />
    <add key="WEBSITE_NODE_DEFAULT_VERSION" value="20.11.0" />
    <add key="NODE_VERSION" value="20.11.0" />
  </appSettings>
</configuration>
